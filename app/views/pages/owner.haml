- title 'Owner Panel'


.mdl-grid
  .mdl-cell.mdl-cell--12-col
    %h2 Owner Panel

.mdl-grid
  .mdl-cell.mdl-cell--4-col
    %h3 Rooms
    = link_to 'Add room',
      new_room_path,
      class: "mdl-button mdl-js-button mdl-button--raised mdl-button--colored mdl-js-ripple-effect"


  .mdl-cell.mdl-cell--8-col
    - @rooms.each do |room|
      .mdl-cell.mdl-cell--12-col
        %section.section--center.mdl-grid.mdl-grid--no-spacing.mdl-shadow--2dp.room-card
          %header.section__play-btn.mdl-cell.mdl-cell--3-col-desktop.mdl-cell--2-col-tablet.mdl-cell--4-col-phone.mdl-color--teal-100.mdl-color-text--white
          .mdl-card.mdl-cell.mdl-cell--9-col-desktop.mdl-cell--6-col-tablet.mdl-cell--4-col-phone
            .mdl-card__supporting-text
              %h4= room.name
              .address
                %p.zip
                  = room.zipcode
                  (#{room.country})
                %p= room.address
              %p= room.description

            .mdl-card__actions
              = link_to 'Show', room_path(room), class: "mdl-button"
              = link_to 'Edit', edit_room_path(room), class: "mdl-button"
              = link_to '(Delete)', room_path(room), class: "mdl-button mdl-js-button", data: { confirm: "Are you sure?" }, method: :delete
